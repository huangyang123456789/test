<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.spring.dao.RoleDao">
    <!--新增角色-->
    <insert id="saveRole" parameterType="com.example.spring.entity.RoleInfo">
    insert into t_sys_roles
            (id,
            user_id,
            role_id,
            is_deleted,
            sort_no,
            gmt_create,
            create_by,
            gmt_modified,
            last_modified_by,
            version,
            user_pwd
            )
        values
           (#{id},
            #{userId},
            #{roleId},
            #{isDeleted},
            0,
            now(),
            #{createBy},
            NOW(),
            #{createBy},
            0,
            #{userPwd})
    </insert>
    <select id="listRoleInfo" parameterType="com.example.spring.entity.RoleInfo" resultType="com.example.spring.entity.RoleInfo">
        Select * from t_sys_roles   WHERE is_deleted=0
    </select>
    <update id="updateRole" parameterType="com.example.spring.entity.UserInfo">
        UPDATE t_sys_roles set role_id="szc" WHERE is_deleted=0
    </update>
    <update id="deleteRole" parameterType="com.example.spring.entity.UserInfo">
        UPDATE t_sys_roles set is_deleted=1  WHERE is_deleted=0
    </update>
    <delete id="deleteReRole" parameterType="com.example.spring.entity.UserInfo">
        DELETE  FROM t_sys_roles  WHERE is_deleted=0
    </delete>
</mapper>