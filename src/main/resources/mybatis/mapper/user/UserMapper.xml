<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neusoft.test1.dao.UserDao">
    <!--新增用户-->
    <insert id="saveUser" parameterType="com.neusoft.test1.entity.UserInfo">
        insert into t_sys_user
            (id,
            user_acct,
            user_name,
            sex,
            phone,
            email,
            id_card,
            is_deleted,
            sort_no,
            gmt_create,
            create_by,
            gmt_modified,
            last_modified_by,
            version,
            user_pwd
            )
        values
           (#{id},
            #{userAcct},
            #{userName},
            #{sex},
            #{phone},
            #{email},
            #{idCard},
            0,
            0,
            now(),
            #{createBy},
            NOW(),
            #{lastModifiedBy},
            0,
            #{userPwd})
    </insert>
    <!--查询-->
    <select id="listUserInfo" parameterType="com.neusoft.test1.entity.UserInfo" resultType="com.neusoft.test1.entity.UserInfo">
        select * from t_sys_user where sex=1
        select * from t_sys_user where sex=1
    </select>
