<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neusoft.springboot_test.dao.UserDao">
    <!--新增用户-->
    <insert id="saveUser" parameterType="com.neusoft.springboot_test.entity.UserInfo">
        insert into t_sys_user
            (id,
            user_acct,
            user_name,
            sex,
            phone,
            email,
            id_card,
            is_deleted,
            sort_no,
            gmt_create,
            create_by,
            gmt_modified,
            last_modified_by,
            version,
            user_pwd
            )
        values
           (#{id},
            #{userAcct},
            #{userName},
            #{sex},
            #{phone},
            #{email},
            #{idCard},
            #{isDeleted},
            0,
            now(),
            #{createBy},
            NOW(),
            #{createBy},
            0,
            #{userPwd})
    </insert>

    <!--查询用户-->
    <select id="listUserInfo" parameterType="com.neusoft.springboot_test.entity.UserInfo" resultType="com.neusoft.springboot_test.entity.UserInfo">
        select * from t_sys_user
    </select>

    <!--更新用户-->
    <update id="updateUser" parameterType="com.neusoft.springboot_test.entity.UserInfo">
        update t_sys_user set user_name = "xiaoji" where id = 6
    </update>

    <!--假删除用户-->
    <update id="deleteUser" parameterType="com.neusoft.springboot_test.entity.UserInfo">
        update t_sys_user set is_deleted = 1 where id = 6
    </update>

    <!--真删除用户-->
    <delete id="deleteUserReal" parameterType="com.neusoft.springboot_test.entity.UserInfo">
        delete from t_sys_user where id = 6
    </delete>

    <!--新增角色-->
    <insert id="saveRole" parameterType="com.neusoft.springboot_test.entity.Role">
        insert into t_role
            (role_id,
            role_name,
            is_deleted,
            sort_no,
            gmt_create,
            create_by,
            gmt_modified,
            last_modified_by,
            version
            )
        values
           (#{roleId},
            #{roleName},
            #{isDeleted},
            #{sortNo},
            #{gmtCreate},
            #{createBy},
            #{gmtModified},
            #{lastModifiedBy},
            #{version}
            )
    </insert>

    <!--查询角色-->
    <select id="listRoleInfo" parameterType="com.neusoft.springboot_test.entity.Role" resultType="com.neusoft.springboot_test.entity.Role">
        select * from t_role
    </select>

    <!--更新角色-->
    <update id="updateRole" parameterType="com.neusoft.springboot_test.entity.Role">
        update t_role set role_name = "xiaoji2" where role_id = 6
    </update>

    <!--假删除角色-->
    <update id="deleteRole" parameterType="com.neusoft.springboot_test.entity.Role">
        update t_role set is_deleted = 1 where role_id = 6
    </update>

    <!--真删除角色-->
    <delete id="deleteRoleReal" parameterType="com.neusoft.springboot_test.entity.Role">
        delete from t_role where role_id = 6
    </delete>

    <!--新增用户角色-->
    <insert id="saveUserRole" parameterType="com.neusoft.springboot_test.entity.UserRole">
        insert into t_user_role
            (user_id,
            role_id,
            is_deleted,
            sort_no,
            gmt_create,
            create_by,
            gmt_modified,
            last_modified_by,
            version
            )
        values
           (#{userId},
            #{roleId},
            #{isDeleted},
            #{sortNo},
            #{gmtCreate},
            #{createBy},
            #{gmtModified},
            #{lastModifiedBy},
            #{version}
            )
    </insert>

    <!--查询用户角色-->
    <select id="listUserRoleInfo" parameterType="com.neusoft.springboot_test.entity.UserRole" resultType="com.neusoft.springboot_test.entity.UserRole">
        select * from t_user_role
    </select>

    <!--更新用户角色-->
    <update id="updateUserRole" parameterType="com.neusoft.springboot_test.entity.UserRole">
        update t_user_role set role_id = "2" where id = 6
    </update>

    <!--假删除用户角色-->
    <update id="deleteUserRole" parameterType="com.neusoft.springboot_test.entity.UserRole">
        update t_user_role set is_deleted = 1 where id = 6
    </update>

    <!--真删除用户角色-->
    <delete id="deleteUserRoleReal" parameterType="com.neusoft.springboot_test.entity.UserRole">
        delete from t_user_role where id = 6
    </delete>
</mapper>