<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.UserDao">
    <!--新增用户-->
    <insert id="saveUser" parameterType="com.example.demo.entity.UserInfo">
        insert into t_user
            (   id,
                name,
                sex,
                isDelet,
                passwd,
                acount,
                age
            )
        values
           (    #{id},
                #{name},
                #{sex},
                0,
                #{passwd},
                #{acount},
                #{age}
            )
    </insert>
    <select id="listUserInfo" parameterType="com.example.demo.entity.UserInfo" resultType="com.example.demo.entity.UserInfo">
        select * from t_user
    </select>
    <update id="changeUser" parameterType="com.example.demo.entity.UserInfo">
        update t_user
        set
            name = #{name},
            sex = #{sex},
            isdelet = #{isDelet},
            passwd = #{passwd},
            acount = #{acount},
            age = #{age}
        where id =#{id}
    </update>

    <delete id="deletUserReal" parameterType="com.example.demo.entity.UserInfo">
        delete from t_user where id = #{id};
    </delete>
</mapper>